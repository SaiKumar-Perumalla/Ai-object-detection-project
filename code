#### âœ… `main.py`
```python
import argparse
import cv2
from ultralytics import YOLO

def detect_on_image(image_path):
    model = YOLO("yolov8n.pt")
    results = model(image_path, show=True)
    results[0].save(filename="output.jpg")
    print("Detection saved to output.jpg")

def detect_on_webcam():
    model = YOLO("yolov8n.pt")
    cap = cv2.VideoCapture(0)

    while True:
        ret, frame = cap.read()
        if not ret:
            break
        results = model(frame)
        annotated_frame = results[0].plot()
        cv2.imshow("YOLOv8 Real-Time Detection", annotated_frame)
        if cv2.waitKey(1) & 0xFF == ord('q'):
            break

    cap.release()
    cv2.destroyAllWindows()

if __name__ == "__main__":
    parser = argparse.ArgumentParser(description="YOLOv8 Object Detection")
    parser.add_argument('--image', type=str, help='Path to image file')
    parser.add_argument('--webcam', action='store_true', help='Use webcam for real-time detection')

    args = parser.parse_args()

    if args.image:
        detect_on_image(args.image)
    elif args.webcam:
        detect_on_webcam()
    else:
        print("Provide --image or --webcam option.")
